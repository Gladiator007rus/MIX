{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    // Currently run task doesn't work because it requires --scriptonly arguments and clean war3map.j.
    // Igneaalis: currently working on .ps1 script.
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/tools/JassHelper/jasshelper.exe",
            "group": "build",
            "args": [
                "--debug",
                "${workspaceFolder}/source/common.j",
                "${workspaceFolder}/source/Blizzard.j",
                "${workspaceFolder}/output/war3map.j",
                "${workspaceFolder}/map/MIX 0.0.1.w3x"
            ],
            "dependsOrder": "sequence",
            "dependsOn": ["compile", "jasshelper"],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "jasshelper",
            "type": "shell",
            "command": "${workspaceFolder}/tools/JassHelper/jasshelper.exe",
            "group": "build",
            "args": [
                "--debug",
                "--scriptonly",
                "${workspaceFolder}/source/common.j",
                "${workspaceFolder}/source/Blizzard.j",
                "${workspaceFolder}/source/war3map.j",
                "${workspaceFolder}/output/war3map.j"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "powershell",
            "group": "build",
            "args": [
                {
                    "value": "-ExecutionPolicy ByPass",
                    "quoting": "escape"
                },
                {
                    "value": "-File ${workspaceFolder}\\compile.ps1",
                    "quoting": "escape"
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "D:/Games/Warcraft III/_retail_/x86_64/World Editor.exe",
            "group": "test",
            "args": [
                "-launch",
                "-loadfile",
                "${workspaceFolder}/map/MIX 0.0.1.w3x"
            ],
            "dependsOrder": "sequence",
            "dependsOn": ["run"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}